{
  "size": 0,
  "query": {
      "bool": {
        "must": [
          { "term" : { "snapshot_date" : "{{evaluationDate}}" } },
          { "term": { "project_name.keyword": { "value": "{{project}}", "case_insensitive": true } } }
        ]
      }
    },
  "aggs": {
    "total_docs": {
      "cardinality": {
        "field": "key.keyword"
      }
    },
    "blocking": {
      "filter": {
        "terms": { "severity.keyword": ["BLOCKER", "CRITICAL"] }
      }
    }
  }
}